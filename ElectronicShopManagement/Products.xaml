<Page x:Class="ElectronicShopManagement.Products"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicShopManagement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Products">

    <Grid Margin="10,30">

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" Margin="10,5,0,20">Product Inventory</TextBlock>

        <ComboBox Name="FilterBy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="185" Margin="10,40,0,0" >
            <ComboBoxItem Content="Name"/>
            <ComboBoxItem Content="Category"/>
        </ComboBox>

        <TextBox Name="TxbFilter" TextChanged="TxbFilter_TextChanged" HorizontalAlignment="Left" VerticalAlignment="Top" Width="257" Margin="210,40,0,0" >Search a product</TextBox>

        <ListView Grid.Row="1" Name="LvProducts" SelectionMode="Single" Margin="10,80,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="25" DisplayMemberBinding="{Binding ProdId}" />
                    <GridViewColumn Header="Product name"  DisplayMemberBinding="{Binding ProdName}" />
                    <GridViewColumn Header="Product Category"  DisplayMemberBinding="{Binding ProdCategory}" />
                    <GridViewColumn Header="Product Quantity"  DisplayMemberBinding="{Binding ProdQty}" />
                    <GridViewColumn Header="Product price"  DisplayMemberBinding="{Binding ProdPrice}" />
                </GridView>

            </ListView.View>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Update" Click="CmUpdade_Click" />
                    <MenuItem Header="Delete" Click="CmDelete_Click" />
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>
        <Button x:Name="BtnAdd" Click="BtnAdd_Click"  HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="500,27,0,0"  Content="Add new product"/>
    </Grid>
</Page>
